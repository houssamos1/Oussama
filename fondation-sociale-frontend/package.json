{
  "name": "fondation-sociale-frontend",
  "version": "1.0.0",
  "description": "Portail des prestations sociales de la Fondation Sociale du Ministère de l'Investissement",
  "author": "Équipe Développement Fondation Sociale",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://fondation-sociale.ma",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "ng serve --configuration development",
    "start:staging": "ng serve --configuration staging",
    "start:proxy": "ng serve --proxy-config proxy.conf.json",
    "start:host": "ng serve --host 0.0.0.0",
    "build": "ng build",
    "build:dev": "ng build --configuration development",
    "build:staging": "ng build --configuration staging",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/fondation-sociale-frontend/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:watch": "ng test --watch",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix",
    "extract-i18n": "ng extract-i18n",
    "pwa:build": "npm run build:prod && npx http-server dist/fondation-sociale-frontend -p 8080 -c-1",
    "postinstall": "ngcc",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "clean": "rimraf dist/ node_modules/.cache coverage/",
    "clean:install": "npm run clean && npm ci",
    "prepare": "husky install",
    "generate:component": "ng generate component",
    "generate:service": "ng generate service",
    "generate:guard": "ng generate guard",
    "generate:pipe": "ng generate pipe",
    "generate:directive": "ng generate directive",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.7",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.1.7",
    "@angular/platform-browser-dynamic": "^20.1.7",
    "@angular/router": "^20.1.7",
    "@angular/service-worker": "^20.1.7",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "chart.js": "^4.5.0",
    "date-fns": "^3.3.1",
    "lucide-angular": "^0.539.0",
    "ng2-charts": "^8.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^18.0.1",
    "@angular-eslint/eslint-plugin": "^18.0.1",
    "@angular-eslint/eslint-plugin-template": "^18.0.1",
    "@angular-eslint/schematics": "^18.0.1",
    "@angular-eslint/template-parser": "^18.0.1",
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "> 0.5%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:headless"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,html}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "src/**/*.scss": [
      "npm run lint:styles"
    ]
  }
}
